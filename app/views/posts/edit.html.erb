<h1>Edytuj Post</h1>

<% if @post.errors.present? %>
	<% @post.errors.full_messages.each do |err| %>
		<li><%= err %></li>
	<% end %>
<% end %>

<%= form_for(@post) do |f| %>
  	<%= f.label :title %>
  	<%= f.text_field :title %>
  	<br>
	<%= f.label :content %>
	<%= f.text_field :content %>
	<%= f.submit 'Edytuj!' %>
<% end %>